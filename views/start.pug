extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
   div(class="py-5 ")
        h1(class="text-center text-4xl font-extrabold") Ubicación en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sw uppercase text-gray-800 font-bold") Filtrar Propiedades

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categories" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each category in categories
                        option(value=category.id)= category.name

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(id="prices" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each price in prices
                        option(value=price.id)= price.name

        div(id="map-start" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en venta

            // pre= JSON.stringify(houses, undefined, 2)

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-3 mt-14")
                each house in houses
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${ house.picture }` alt=` imagen casa ${ house.title }`)
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold")= house.title
                            p(class="text-sm text-gray-600") Habitaciones 
                                span(class="text-gray-800 font-bold ")=house.bedrooms
                            p(class="text-sm text-gray-600") Baños 
                                span(class="text-gray-800 font-bold ")=house.toilets
                            p(class="text-sm text-gray-600") Precio 
                                span(class="text-gray-800 font-bold ")=house.price.name
                            a(href=`/property/${ house.id }` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedades

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapStart.js")
